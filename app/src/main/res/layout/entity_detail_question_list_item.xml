<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="3dp"
    android:layout_marginVertical="3dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_entity_detail_question_list_item_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:minHeight="30dp"
        android:singleLine="false"
        android:text="题目"
        android:textSize="16sp" />

    <RadioGroup
        android:id="@+id/rdoGroup_entity_detail_question_list_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <RadioButton
            android:id="@+id/rdoBtn_entity_detail_question_list_item_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:tag="A"
            android:text="RadioButton" />

        <RadioButton
            android:id="@+id/rdoBtn_entity_detail_question_list_item_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:tag="B"
            android:text="RadioButton" />

        <RadioButton
            android:id="@+id/rdoBtn_entity_detail_question_list_item_c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:tag="C"
            android:text="RadioButton" />

        <RadioButton
            android:id="@+id/rdoBtn_entity_detail_question_list_item_d"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:tag="D"
            android:text="RadioButton" />

    </RadioGroup>
</LinearLayout>