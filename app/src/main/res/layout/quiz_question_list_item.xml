<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center|center_horizontal"
    android:layout_marginHorizontal="3dp"
    android:gravity="center|center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center_horizontal"
        android:gravity="center|center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_quiz_question_list_item_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:singleLine="false"
            android:text="第 1 题，共 1 题"
            android:textSize="31sp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/tv_quiz_question_list_item_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:singleLine="false"
            android:text="题面"
            android:textColor="@color/black"
            android:textSize="27sp" />

        <RadioGroup
            android:id="@+id/rdoGroup_quiz_question_list_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rdoBtn_quiz_question_list_item_a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="false"
                android:text="选项A"
                android:textSize="22sp"
                android:layout_margin="3dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"/>

            <RadioButton
                android:id="@+id/rdoBtn_quiz_question_list_item_b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="false"
                android:text="选项B"
                android:textSize="22sp"
                android:layout_margin="3dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"/>

            <RadioButton
                android:id="@+id/rdoBtn_quiz_question_list_item_c"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="false"
                android:text="选项C"
                android:textSize="22sp"
                android:layout_margin="3dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"/>

            <RadioButton
                android:id="@+id/rdoBtn_quiz_question_list_item_d"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="false"
                android:text="选项D"
                android:textSize="22sp"
                android:layout_margin="3dp"/>

        </RadioGroup>

    </LinearLayout>

</ScrollView>